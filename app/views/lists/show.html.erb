<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key %>'">
  <h1><%= @list.name%></h1>
</div>

<div class="container my-5">
  <div class="d-flex justify-content-between pb-3">
    <h1><%= @list.name %></h1>
    <%= link_to "Add a review", new_list_bookmark_path(@list), class: "btn btn-primary h-100 align-self-center" %>
  </div>
  <div class="row">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="col-6">
        <div class="card-product">
          <img src="<%= bookmark.movie.poster_url%>" alt="<%= bookmark.movie.title %>">
          <div class="card-product-infos">
            <h2><%= bookmark.movie.title %></h2>
            <p><%= bookmark.movie.overview %></p>
            <p><%= bookmark.movie.rating %></p>
            <p><i class="fa-solid fa-quote-left"></i> <%= bookmark.comment %></p>
          </div>
          </p><%= link_to '<i class="fa-solid fa-trash"></i>'.html_safe, bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "position" %><p>
        </div>

      </div>
    <% end %>
  </div>
</div>
